<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ordercheckout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backcheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:src="@drawable/abc_vector_test" />

        <TextView
            android:id="@+id/bookmarksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Order Details"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_marginEnd="10sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:background="@drawable/corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30sp"
                            android:layout_marginTop="30sp"
                            android:layout_weight="1"
                            android:text="ShIPPING TO"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/change1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30sp"
                            android:layout_marginEnd="30sp"
                            android:layout_weight="0"
                            android:gravity="right"
                            android:text="Change"
                            android:textColor="#E32727"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/addressdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginTop="20sp"
                        android:fontFamily="@font/avenir"
                        android:text="EL-hourya . No.630,\n12345 - Alexandria/Egypt"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5sp"
                        android:layout_marginStart="30sp"
                        android:layout_marginTop="30sp"
                        android:layout_marginEnd="30sp"
                        android:layout_marginBottom="20sp"
                        android:background="#ACACAC" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30sp"
                            android:layout_marginTop="30sp"
                            android:layout_weight="1"
                            android:text="Phone Number"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/change2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30sp"
                            android:layout_marginEnd="30sp"
                            android:layout_weight="0"
                            android:gravity="right"
                            android:text="Change"
                            android:textColor="#E32727"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="30sp"
                        android:imeOptions="actionDone"
                        android:fontFamily="@font/avenir"
                        android:inputType="phone"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5sp"
                        android:layout_marginStart="30sp"
                        android:layout_marginTop="30sp"
                        android:layout_marginEnd="30sp"
                        android:layout_marginBottom="20sp"
                        android:background="#ACACAC" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:text="ORDER DETAILS" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/myorders"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_marginLeft="30sp"
                        android:layout_marginRight="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5sp"
                        android:layout_marginStart="30sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="30sp"
                        android:background="#ACACAC" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30sp"
                                    android:layout_marginTop="30sp"
                                    android:layout_weight="1"
                                    android:text="Subtotal"
                                    android:textColor="#fff"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30sp"
                                    android:layout_marginEnd="30sp"
                                    android:layout_weight="0"
                                    android:gravity="right"
                                    android:text="EGP 1,499"
                                    android:textColor="#fff"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30sp"
                                    android:layout_marginTop="30sp"
                                    android:layout_weight="1"
                                    android:text="Total to Pay"
                                    android:textColor="#fff"
                                    android:textSize="25sp" />

                                <TextView
                                    android:id="@+id/price2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30sp"
                                    android:layout_marginEnd="30sp"
                                    android:layout_weight="0"
                                    android:gravity="right"
                                    android:text="EGP 1,499"
                                    android:textColor="#fff"
                                    android:textSize="25sp" />


                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/save"
                                android:layout_width="wrap_content"
                                android:layout_height="40sp"
                                android:layout_gravity="bottom|center"
                                android:layout_marginTop="20sp"
                                android:layout_marginBottom="30sp"
                                android:backgroundTint="#FF0000"
                                app:cardCornerRadius="20sp"
                                app:cardElevation="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginRight="10sp"
                                    android:layout_marginBottom="10sp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView17"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        app:tint="#FF0000" />


                                    <TextView
                                        android:id="@+id/textView25"
                                        android:layout_width="200sp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:outlineProvider="none"
                                        android:text="PLACE ORDER"
                                        android:textColor="#fff"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>