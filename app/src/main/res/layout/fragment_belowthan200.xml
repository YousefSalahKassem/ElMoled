<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout tools:context=".belowthan200"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    -

    -

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        -

        -

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#000000">
            -

            <LinearLayout
                android:layout_height="50sp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#000000">

                <ImageView
                    android:id="@+id/searchBookmarks"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_weight="0"
                    android:src="@drawable/search"
                    app:tint="@color/white" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0">

                    <TextView
                        android:id="@+id/bookmarksTitle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Below Than 199"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="1"

                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:alpha="0"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:shadowColor="#FFFFFF"
                        android:hint="Search..."
                        android:textColor="#FFFFFF"
                        android:textColorHighlight="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textColorLink="#FFFFFF"
                        android:imeOptions="actionDone"
                        android:visibility="invisible"
                        app:layout_constraintBaseline_toBaselineOf="@+id/bookmarksTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.099"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            -

            <androidx.cardview.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/corner"
                android:id="@+id/card5">
                -

                -

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical">


                    -

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="30sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="20sp"
                            android:text="MEN"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/categoriesMen" />

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="2sp"
                            android:orientation="horizontal"
                            android:background="#000000"
                            android:layout_weight="0"
                            android:layout_marginLeft="10sp" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="20sp"
                            android:text="WOMEN"
                            android:id="@+id/categoriesWomen"
                            android:layout_marginLeft="10sp" />

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="2sp"
                            android:orientation="horizontal"
                            android:background="#000000"
                            android:layout_weight="0"
                            android:layout_marginLeft="10sp" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="20sp"
                            android:text="CHILDREN"
                            android:id="@+id/categoriesChildren"
                            android:layout_marginLeft="10sp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/belowItems"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/searchCategoryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="20sp"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/belowCategories"
                        android:layout_marginTop="30sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>